{{#each this}}
<li class="list__item">
    {{!-- Ссылка для фокуса табом --}}
    <a href="#">
        <div class="photo-card">
            <img src="{{this.webformatURL}}" data-source='{{this.largeImageURL}}' alt="" width="400px" height="250px" />

            <div class="stats">
                <p class="stats-item">
                    <i class="material-icons">thumb_up</i>
                    {{this.likes}}
                </p>
                <p class="stats-item">
                    <i class="material-icons">visibility</i>
                    {{this.views}}
                </p>
                <p class="stats-item">
                    <i class="material-icons">comment</i>
                    {{this.comments}}
                </p>
                <p class="stats-item">
                    <i class="material-icons">cloud_download</i>
                    {{this.downloads}}
                </p>
            </div>
        </div>
</li>
{{/each}}